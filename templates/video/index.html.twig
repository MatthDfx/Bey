{% extends 'base.html.twig' %}

{% block title %}Video index
{% endblock %}

{% block body %}
	<div class="container py-4">
		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 g-2 d-flex justify-content-center">
			<div class="p-5 mb-4 rounded-3">
				<div class="container-fluid py-5">
					{% for video in videos|sort ((b, a) => a.id <=> b.id) %}
						<div class=" d-flex justify-content-center mb-3">
							{% if app.user %}
								<a class="likeVideoButton" href="{{ path('app_addVideoLikeList', {id: video.id})}}">
									<i class="bi {{ app.user.isInLikeListVideo(video) ? 'bi-heart-fill' : 'bi-heart' }}"></i>
								</a>
							{% endif %}
							<iframe class="w-100" src="{{video.url}}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
	<div>
		<a id="cBack" class="cInvisible" href="#topPage"></a>
		<script src="/assets/styles/topPage.js"></script>
	</div>
{% endblock %}
