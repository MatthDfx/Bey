{% extends 'base.html.twig' %}

{% block title %}Picture index
{% endblock %}

{% block body %}
	<h1>Toutes les photos</h1>
	<button class="btn btn-light rounded-5">
		<a href="{{ path('app_picture_new') }}">Ajouter une nouvelle photo</a>
	</button>
	<table class="table">
		<thead>
			<tr>
				<th class="text-center">Photos</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for picture in pictures|sort ((b, a) => a.id <=> b.id) %}
				<tr>
					<td>
						<img class="mx-auto d-block gif" src="{{ vich_uploader_asset(picture) }}" alt="{{ picture.poster }}">
					</td>
					<td>
						{{ include('picture/_delete_form.html.twig') }}
					</td>
				</tr>
			</tr>
		{% else %}
			<tr>
				<td colspan="3">no records found</td>
			</tr>
		{% endfor %}
	</tbody>
</table>{% endblock %}
